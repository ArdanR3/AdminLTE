@model AdminLTE_011.Models.Budget

@{
    ViewData["Title"] = "Hapus Budget";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Konfirmasi Hapus</h1>
                <h3>Apakah Anda yakin ingin menghapus budget ini?</h3>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Detail Budget</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nama)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nama)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Kategori)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Kategori.Nama)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TotalBudget)
                    </dt>
                    <dd class="col-sm-10">
                        @Model.TotalBudget.ToString("C")
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Hapus" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary">Batal</a>
                </form>
            </div>
        </div>
    </div>
</div>